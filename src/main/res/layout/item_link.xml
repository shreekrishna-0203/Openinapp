<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivLinkIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLinkTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/tvClicks"
        app:layout_constraintStart_toEndOf="@id/ivLinkIcon"
        app:layout_constraintTop_toTopOf="@id/ivLinkIcon" />

    <TextView
        android:id="@+id/tvLinkDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvLinkTitle"
        app:layout_constraintTop_toBottomOf="@id/tvLinkTitle" />

    <TextView
        android:id="@+id/tvClicks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivLinkIcon" />

    <TextView
        android:id="@+id/tvClicksLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clicks"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/tvClicks"
        app:layout_constraintTop_toBottomOf="@id/tvClicks" />

    <TextView
        android:id="@+id/tvLinkUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/link_url_background"
        android:padding="8dp"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/ivCopy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLinkIcon" />

    <ImageView
        android:id="@+id/ivCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_copy"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvLinkUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvLinkUrl" />

</androidx.constraintlayout.widget.ConstraintLayout>